<%= simple_form_for(@user) do |f| %>
  <% if flash[:error].present? %>
    <div class="alert alert-danger">
      <ul>
        <% flash[:error].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, input_html: { value: f.object.name || params[:user_name] } %>
  <%= f.input :email, input_html: { value: f.object.email || params[:user_email] } %>
  <%= f.hidden_field :device_id, value: f.object.device_id || params[:device_id] %>
  <%= f.button :submit, class: 'btn-submit' %>
<% end %>
